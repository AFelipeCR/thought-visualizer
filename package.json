{
  "name": "@afelipecr/thought-visualizer",
  "version": "0.1.0",
  "description": "Universal component to render Obsidian/Quartz-style note graphs",
  "type": "module",
  "main": "./dist/thought-visualizer.umd.cjs",
  "module": "./dist/thought-visualizer.js",
  "types": "./dist/index.d.ts",
