    "js-yaml": "^4.1.1"
  },
  "devDependencies": {
    "@types/force-graph": "^1.21.2",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^25.0.9",
    "terser": "^5.46.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vite-plugin-dts": "^4.5.4"
  }
